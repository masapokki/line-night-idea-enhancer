{
  "name": "line-night-idea-enhancer",
  "version": "1.0.0",
  "description": "夜にLINEに送信されたアイデアをAIが処理し、翌朝に結果を送信するアプリケーション",
  "main": "server.js",
  "scripts": {
    "start": "node --expose-gc server.js",
    "dev": "nodemon --expose-gc server.js",
    "tunnel": "ngrok http 3000",
    "dev:tunnel": "concurrently \"npm run dev\" \"npm run tunnel\""
  },
  "keywords": [
    "line",
    "bot",
    "ai",
    "idea",
    "enhancer"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "@octokit/rest": "^19.0.7",
    "axios": "^1.3.4",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "openai": "^4.0.0",
    "puppeteer-core": "^24.6.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^2.0.22"
  }
}
